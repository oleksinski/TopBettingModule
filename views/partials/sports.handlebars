{{#each data.sports}}
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="heading{{alias}}">
            <h4 class="panel-title">
                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion"
                   href="#collapse{{alias}}" aria-expanded="false" aria-controls="collapse{{alias}}">
                    <div>{{name}}</div>
                </a>
            </h4>
        </div>
        <div id="collapse{{alias}}" class="panel-collapse collapse" role="tabpanel"
             aria-labelledby="heading{{alias}}">
            <div class="panel-body">
                items
            </div>
        </div>
    </div>
{{/each}}