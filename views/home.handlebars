<div>  
    {{#if tabs}} 
    <ul class="nav nav-tabs" role="tablist" id="tabs"> 
        {{#each tabs}} 
            <li role="presentation" {{!--class="active"--}}><a href="#{{id}}" aria-controls="{{id}}" role="tab" data-toggle="tab">{{title}}</a></li>
        {{/each}} 
    </ul>
      
    <div class="tab-content"> 
        {{#each tabs}} 
            <div role="tabpanel" class="tab-pane {{!--active--}}" id="{{id}}">{{title}}</div>
        {{/each}} 
    </div>
    {{/if}}  

    <script type="text/javascript">
        $('#tabs li').each(function(index) {
            $(this).on('click', function (e) {

            })
        });
    </script>
</div>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    {{#each sports}}
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="heading{{name}}">
                <h4 class="panel-title">
                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion"
                       href="#collapse{{name}}" aria-expanded="false" aria-controls="collapse{{name}}">
                        <div> {{name}}</div>
                    </a>
                </h4>
            </div>
            <div id="collapse{{name}}" class="panel-collapse collapse" role="tabpanel"
                 aria-labelledby="heading{{name}}">
                <div class="panel-body">
                    items
                </div>
            </div>
        </div>
    {{/each}}
</div>